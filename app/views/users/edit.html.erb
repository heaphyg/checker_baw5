<h2>User Profile</h2>

<h3>Hello <%= @user.name %></h3>

<p>Feel free to edit your profile here.</p>

<hr>

<%= form_for :user, url: user_path(@user), method: :patch do |f| %>

	<% if @user.errors.any? %>
		<ul>
			<% @user.errors.full_message.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :name %>
	<%= f.text_field :name %><br />

	<%= f.label :email %>
	<%= f.text_field :email %><br />

	<%= f.submit %>
<% end %>




