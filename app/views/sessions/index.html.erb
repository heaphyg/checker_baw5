<div class='mycontainer thumbnail'>

  <h3>Login</h3>
  <%= form_for @user, url: sessions_url do |f| %>
  	<%= f.email_field :email, placeholder: "Email", :class=>('form-control col-xs-3')  %>
        <br>
  	<%= f.password_field :password, placeholder: "Password", :class=>('form-control col-xs-3')  %>
    <br>
  	<%= f.submit "Login", { :class=>('btn btn-primary') } %>
  <% end %>
<hr>
<br>

  <h3>Sign Up</h3>
  <%= form_for @user do |f| %>
  	<%= f.text_field :name, placeholder: "Name", :class=>('form-control col-xs-3') %><br>
  	<%= f.email_field :email, placeholder: "Email", :class=>('form-control col-xs-3')  %><br>
  	<%= f.password_field :password, placeholder: "Password", :class=>('form-control col-xs-3') %><br>
  	<%= f.password_field :password_confirmation, placeholder: "Confirm password", :class=>('form-control col-xs-3')  %><br>
  	<%= f.submit "Sign Up!", { :class=>('btn btn-primary') } %>
  <% end %>
</div>






